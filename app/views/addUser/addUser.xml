<page loaded="pageLoaded">
    <ActionBar title="Users">
        <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap"/>
        <ActionBar.actionItems>
            <ActionItem ios.systemIcon="3" android.systemIcon="ic_menu_save" ios.position="right" tap="saveUsers"/>
        </ActionBar.actionItems>
    </ActionBar>
    <ScrollView>
        <StackLayout>
            <StackLayout>
                <label text="firstname"></label>
                <TextField hint="first name" text="{{user.first_name}}"></TextField>
            </StackLayout>
            <StackLayout>
                <label text="lastname"></label>
                <TextField text="{{user.last_name}}"></TextField>
            </StackLayout>
            <StackLayout>
                <label text="email"></label>
                <TextField text="{{user.email}}"></TextField>
            </StackLayout>
            <StackLayout>
                <label text="gender"></label>
                <TextField text="{{user.gender}}"></TextField>
            </StackLayout>
            <StackLayout>
                <label text="ip address"></label>
                <TextField text="{{user.ip_address}}"></TextField>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</page>